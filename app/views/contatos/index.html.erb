<div class="elegant-aero">
  <script>
    $.notify("<%= notice %>", "success");
  </script>

  <h1><%= "#{t('messages.listing')} #{@contatos.model_name.human(count: @contatos.count)}" %></h1>

  <table class="table table-bordered">
    <thead class="thead-inverse">
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Tipo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @contatos.each do |contato| %>
        <tr style="background: <%= cycle('white', '#F9FFE4') -%>">
          <td><%= contato.nome %></td>
          <td><%= contato.email %></td>
          <td><%= contato.tipo.descricao %></td>
          <td><%= link_to t('edit'), edit_contato_path(contato), class:"btn btn-warning" %></td>
          <td><%= link_to t('destroy'), contato, class:"btn btn-danger", method: :delete, data: { confirm: t('messages.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
    
  </table>
  <%= paginate(@contatos) %>
  <br>

  <%= link_to t('back'), bemvindo_path, class: "btn btn-info" %>
  <%= link_to t('add'), new_contato_path, class: "btn btn-success" %>

  <%= render partial:"rodape" %>
</div>
