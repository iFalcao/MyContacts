<%= form_for(@tipo, html: {class: "elegant-aero"}) do |f| %>
  <h1><%= @tipo.model_name.human %></h1>
  <% if @tipo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tipo.errors.count, "erro") %> proibiu esse tipo de ser salvo:</h2>

      <ul>
      <% @tipo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :descricao %>
    <%= f.text_field :descricao %>
  </div>
  <div class="actions">
    <%= f.submit "Enviar", class: "btn btn-success"%>
    <%= link_to t('back'), :back, class: "btn btn-info"%>
  </div>
<% end %>
